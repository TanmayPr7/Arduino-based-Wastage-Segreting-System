//This is the basic source code

#include <Servo.h>
int servopin = 3;
int senspin = A0;
int Rled = 12;
int Gled = 9;
int val;
Servo myservo;

void setup(){
  Serial.begin(9600);
  myservo.attach(servopin);
  pinMode(senspin, INPUT);
  pinMode(Rled, OUTPUT);
  pinMode(Gled, OUTPUT);
  myservo.write(90);
}

void loop(){
  val = analogRead(senspin);
  Serial.println(val);
  //delay(1000);

  if(val <=999){
    myservo.write(135);
    digitalWrite(Gled, HIGH);
    delay(2000);
    digitalWrite(Gled, LOW);
    myservo.write(90);
  }

  else{
    myservo.write(90);
    digitalWrite(Rled, HIGH);
    delay(1000);
    digitalWrite(Rled, LOW);
  }
}
