//This is the basic source code

#include <Servo.h>
int servopin = 3;
int senspin = A0;
int Rled = 12;
int Gled = 9;
int val;
Servo myservo;

void setup(){
  Serial.begin(9600);
  myservo.attach(servopin);
  pinMode(senspin, INPUT);
  pinMode(Rled, OUTPUT);
  pinMode(Gled, OUTPUT);
  myservo.write(90);
}

